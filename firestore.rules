rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'users' collection (as discussed before)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Allow coordinators to read all user data (for StudentList)
    match /users/{document=**} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coordinator';
    }

    // Rules for the 'events' collection
    match /events/{eventId} {
      // Allow any authenticated user to read events
      allow read: if true;
      // Allow only coordinators to create, update, and delete events
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coordinator';

      // Rules for subcollection 'registrations' under each event
      match /registrations/{registrationId} {
        // Allow any authenticated user to create a registration (RSVP)
        allow create: if request.auth != null;
        // Allow a user to read and delete their own registration
        allow read, delete: if request.auth != null && request.auth.uid == registrationId;
        // Allow coordinators to read all registrations for an event
        allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coordinator';
      }
    }
  }
}